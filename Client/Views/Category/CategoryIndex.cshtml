@model IEnumerable<Client.Models.CategoryDto>

<br />
<br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Category List</h1>
        </div>
        <div class="col">
            <div class="col text-end pt-1">
                <a asp-action="CategoryCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Create New Category</a>
            </div>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>
                        <a asp-action="CategoryUpdate" class="btn btn-success" asp-route-categoryId="@item.Id">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a asp-action="CategoryDelete" class="btn btn-danger" asp-route-categoryId="@item.Id">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>